<!DOCTYPE HTML>
<html>

<head>
	<title>Magyarországi FM rádióadók</title>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
	<link rel="stylesheet" href="/assets/css/main.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="/assets/css/custom_table.css" />
</head>

<body class="homepage is-preload">
	<div id="page-wrapper">

		<%- include('partials/header') %>

			<!-- Main -->
			<div class="container mt-5 mb-5">
				<div class="row justify-content-center">
					<div class="col-lg-9 col-md-11">
						<div class="card shadow-sm">
							<div class="card-body">
								<h2 class="card-title text-center mb-4" style="color:#246;">Regisztrált felhasználók
									(Adminisztrátori felület)</h2>
								<div class="table-responsive">
									<table class="table table-striped table-bordered align-middle">
										<thead class="table-light">
											<tr>
												<th>#</th>
												<th>Felhasználónév</th>
												<th>Teljes név</th>
												<th>Jogosultság</th>
												<th>Létrehozva</th>
												<th>Módosítva</th>
											</tr>
										</thead>
										<tbody>
											<% if (users.length===0) { %>
												<tr>
													<td colspan="6" class="text-center text-muted">Nincs felhasználó a
														rendszerben.</td>
												</tr>
												<% } %>
													<% users.forEach(function(u, i) { %>
														<tr>
															<td>
																<%= u.id %>
															</td>
															<td>
																<%= u.username %>
															</td>
															<td>
																<%= u.name || '-' %>
															</td>
															<td>
																<%= u.isAdmin ? 'adminisztrátor' : 'normál felhasználó'
																	%>
															</td>
															<td>
																<%= u.createdAt ? new
																	Date(u.createdAt).toLocaleString('hu-HU')
																	: 'nincs adat' %>
															</td>
															<td>
																<%= u.updatedAt ? new
																	Date(u.updatedAt).toLocaleString('hu-HU')
																	: 'nincs adat' %>
															</td>
														</tr>
														<% }); %>
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>







			<%- include('partials/footer') %>

	</div>

	<!-- Scripts -->
	<script src="assets/js/jquery.min.js"></script>
	<script src="assets/js/jquery.dropotron.min.js"></script>
	<script src="assets/js/jquery.scrolly.min.js"></script>
	<script src="assets/js/browser.min.js"></script>
	<script src="assets/js/breakpoints.min.js"></script>
	<script src="assets/js/util.js"></script>
	<script src="assets/js/main.js"></script>

</body>

</html>